<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | Stocks</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/Stylesheet.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

</head>
<body>
    <div class="container">
        <div class="page-content">
            <div class="margin-bottom">
                <div class="flex" id="top-bar-div">
                    <div class="flex-1" id="app-title-div">
                        <h1 class="app-title">
                            <i class="fa-solid fa-money-bill-trend-up"></i>
                            Stocks
                        </h1>
                    </div>
                    <div class="flex-1 pr" id="search-box-div">
                        <input type="search" id="Search" class="search-text" placeholder="Search Stocks" name="SearchText" value="@ViewBag.CurrentSearchString" />
                        <i class="fa-solid fa-gear"></i>
                        <button class="button login-button ml button-blue-back">
                            Login
                        </button>
                    </div>
                </div>
            </div>
            <div class="navbar mb">
                <ul>
                    @if (ViewBag.CurrentUrl == "~/Trade/Index")
                    {
                        <li><a asp-action="Index" asp-controller="Trade" class="nav-active">Trade</a></li>
                    }
                    else
                    {
                        <li><a asp-action="Index" asp-controller="Trade">Trade</a></li>
                    }

                    @if(ViewBag.CurrentUrl == "~/Trade/Orders")
                    {
                        <li><a asp-action="Orders" asp-controller="Trade" class="nav-active">Orders</a></li>
                    }
                    else
                    {
                        <li><a asp-action="Orders" asp-controller="Trade">Orders</a></li>
                    }

                    @if(ViewBag.CurrentUrl == "~/Stocks/Explore")
                    {
                        <li><a asp-action="Explore" asp-controller="Stocks" class="nav-active">Explore</a></li>
                    }
                    else
                    {
                        <li><a asp-action="Explore" asp-controller="Stocks">Explore</a></li>
                    }
           
                    </ul>

            </div>
            @RenderBody()
        </div>
    </div>

    @await RenderSectionAsync("scripts", required: false)
</body>
</html>
